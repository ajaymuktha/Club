<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".GitamWeb">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:orientation="vertical" >

        <ImageView
            android:contentDescription="@string/club"
            android:id="@+id/brand"
            android:layout_width="162.83dp"
            android:layout_height="48dp"
            android:src="@drawable/flogo"
            android:layout_marginStart="67dp"
            android:layout_marginEnd="145.17dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:contentDescription="@string/user"
            android:id="@+id/user"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/avatar"
            android:layout_marginStart="315dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="22.97dp"
            android:layout_marginEnd="27.98dp"/>
        <ImageView
            android:contentDescription="@string/linee"
            android:id="@+id/threeline"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/line"
            android:background="#FFFFFF"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="328dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="31dp"
            />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        
        <TextView
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:text="@string/web_development"
            android:textSize="15sp"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:layout_marginStart="132dp"
            android:background="@drawable/rounded_text1"
            android:textColor="@color/white"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/nameview"
            android:text="@string/name_contact"
            android:textSize="15sp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/number"
            android:text="@string/_970xxxxxxx"
            android:paddingStart="15dp"
            android:paddingEnd="1dp"
            android:textSize="15sp"
            android:layout_marginTop="68dp"

            android:layout_marginStart="260dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/numberstroke"/>

        <EditText

            android:layout_width="161dp"
            android:layout_height="28dp"
            android:id="@+id/editetxt1"
            android:hint="@string/john_nauman"
            android:textStyle="normal"
            android:inputType="textMultiLine"
            android:background="@drawable/edittext1stroke"
            android:layout_marginStart="20dp"
            android:layout_marginTop="130dp"
            android:padding="2dp"
            android:textSize="15sp"/>


        <EditText
            android:layout_width="161dp"
            android:layout_height="28dp"
            android:id="@+id/edittext2"
            android:hint="@string/nequlin"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"
            android:layout_marginTop="130dp"
            android:layout_marginStart="232dp"
            android:background="@drawable/edittext1stroke"
            android:textSize="15sp"
            />

        <EditText
            android:layout_width="374dp"
            android:layout_height="28dp"
            android:id="@+id/edittext3"
            android:hint="@string/itsmannaquein_look_com"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"

            android:layout_marginTop="175dp"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:background="@drawable/edittext1stroke"
            />
        <EditText
            android:layout_width="374dp"
            android:layout_height="28dp"
            android:id="@+id/edittext4"
            android:hint="@string/itsmananquein"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:layout_marginTop="215dp"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:background="@drawable/edittext1stroke"
            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

     <TextView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/college"
         android:text="@string/college"
         android:textSize="15sp"
         android:layout_marginTop="25dp"
         android:layout_marginStart="20dp"/>

        <Button
            android:id="@+id/gitam"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="@string/gitam"
            android:textColor="@color/white"
            android:background="@drawable/rounded_text1"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="215dp"
            />
        
        <Button
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="@string/other"
            android:textColor="@color/blue"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/numberstroke"
            android:layout_marginStart="315dp"
            />


        <EditText
            android:layout_width="374dp"
            android:layout_height="30dp"
            android:layout_marginTop="70dp"
            android:hint="@string/cse"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:background="@drawable/edittext1stroke"
            android:id="@+id/edittext5"
            />
        <EditText
            android:layout_width="374dp"
            android:layout_height="28dp"
            android:layout_marginTop="110dp"
            android:hint="@string/_121710xxxxxx"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/edittext1stroke"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="@string/years_of_study"
            android:layout_marginTop="180dp"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            />
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="93dp"
            android:layout_height="35dp"
            android:layout_marginTop="180dp"
            android:layout_marginStart="130dp"
            >

        </Spinner>

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/to"
            android:text="@string/to"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:layout_marginTop="180dp"
            android:layout_marginStart="245dp"
            />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="93dp"
            android:layout_height="35dp"
            android:layout_marginTop="180dp"
            android:layout_marginStart="295dp"
            >
        </Spinner>


        <TextView
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:id="@+id/resume"
            android:text="@string/resume_cv"
            android:textSize="15sp"
            android:layout_marginTop="250dp"
            android:layout_marginStart="20dp"
            />
        
        
        <Button
            android:id="@+id/save"
            android:textSize="15sp"
            android:text="@string/save"
            android:background="@drawable/rounded_text1"
            android:textColor="@color/white"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginTop="350dp"
            android:layout_marginStart="161dp"
            />
        


    </RelativeLayout>
    

</LinearLayout>