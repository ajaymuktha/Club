<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WebDevelopment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/brand"
            android:layout_width="162.83dp"
            android:layout_height="48dp"
            android:src="@drawable/flogo"
            android:layout_marginLeft="67dp"
            android:layout_marginRight="145.17dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:id="@+id/user"
            android:layout_width="32.02dp"
            android:layout_height="33.97dp"
            android:src="@drawable/avatar"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="22.97dp"
            android:layout_marginRight="27.98dp"/>
        <ImageView
            android:id="@+id/threeline"
            android:layout_width="29dp"
            android:layout_height="20dp"
            android:src="@drawable/line"
            android:background="#FFFFFF"
            android:layout_marginTop="34dp"
            android:layout_marginRight="328dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="31dp"
            />



    </RelativeLayout>









    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/applyview"
            android:layout_width="130dp"
            android:layout_height="25dp"
            android:text="APPLYING IN"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:id="@+id/webview"
            android:text="  WEB DEVELOPMENT  "
            android:layout_marginTop="30dp"
            android:layout_marginStart="170dp"
            android:paddingLeft="15dp"
            android:layout_marginEnd="20dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_text1"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/nameview"
            android:text="@string/name_contact"
            android:textSize="15sp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/number"
            android:text="   970XXXXXXX"
            android:paddingStart="5dp"
            android:textSize="15sp"
            android:layout_marginTop="88dp"
            android:layout_marginStart="260dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/numberstroke"/>
        <EditText

            android:layout_width="161dp"
            android:layout_height="28dp"
            android:id="@+id/editetxt1"
            android:hint="  FIRST NAME "
            android:textStyle="normal"
            android:inputType="textMultiLine"
            android:background="@drawable/edittext1stroke"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="130dp"
            android:padding="2dp"
            android:textSize="15sp"/>
        
        
        <EditText
            android:layout_width="161dp"
            android:layout_height="28dp"
            android:id="@+id/edittext2"
            android:hint="  Last Name "
            android:layout_marginTop="130dp"
            android:layout_marginStart="232dp"
            android:background="@drawable/edittext1stroke"
            android:padding="2dp"
            android:textSize="15sp"
            />
        <EditText
            android:layout_width="374dp"
            android:layout_height="28dp"
            android:id="@+id/edittext3"
            android:hint="  Email Address  "
            android:padding="2dp"

            android:layout_marginTop="175dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:background="@drawable/edittext1stroke"
            />
        <EditText
            android:layout_width="374dp"
            android:layout_height="28dp"
            android:id="@+id/edittext4"
            android:hint="GitLab @UserName"
            android:paddingLeft="10dp"
            android:layout_marginTop="215dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:background="@drawable/edittext1stroke"
            />
        




    </RelativeLayout>
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/college"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" COLLEGE "
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="465dp"
            />

        <Button
            android:id="@+id/other"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="GITAM"
            android:textColor="@color/blue"
            android:paddingRight="10dp"
            android:background="@drawable/numberstroke"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="240dp"
            />
        <Button
            android:id="@+id/othermain"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="OTHER"
            android:background="@drawable/rounded_text1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="328dp"
            android:layout_marginEnd="2dp"
            />
        
        <EditText
            android:layout_width="374dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:hint="Name of the college "
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:background="@drawable/edittext1stroke"
            android:id="@+id/edittext5"
            />
        <EditText
            android:layout_width="374dp"
            android:layout_height="28dp"
            android:layout_marginTop="100dp"
            android:hint=" Branch of Study "
            android:paddingLeft="10dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/edittext1stroke"
            android:textSize="15sp"
            />

        <EditText
            android:layout_width="374dp"
            android:layout_height="30dp"
            android:layout_marginTop="140dp"
            android:layout_marginStart="20dp"
            android:paddingLeft="10dp"
            android:hint="Student Registration ID"
            android:textSize="15sp"
            android:background="@drawable/edittext1stroke"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Years of study"
            android:layout_marginTop="190dp"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            />
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="93dp"
            android:layout_height="35dp"
            android:layout_marginTop="190dp"
            android:layout_marginStart="130dp"
            >

        </Spinner>
        
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/to"
            android:text=" to "
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:layout_marginTop="190dp"
            android:layout_marginStart="245dp"
            />
        
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="93dp"
            android:layout_height="35dp"
            android:layout_marginTop="190dp"
            android:layout_marginStart="295dp"
            >
        </Spinner>
        
        <TextView
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:id="@+id/resume"
            android:text="RESUME/CV"
            android:textSize="15dp"
            android:layout_marginTop="250dp"
            android:layout_marginStart="20dp"
            />

        <Button
            android:id="@+id/saveprofile"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="310dp"
            android:layout_marginStart="79dp"
            android:layout_marginEnd="20dp"
            android:text=" SAVE TO PROFILE"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:background="@drawable/edittext1stroke"
            />
        
        <Button
            android:id="@+id/apply"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="310dp"
            android:layout_marginStart="240dp"
            android:textSize="15sp"
            android:text="APPLY NOW"
            android:textColor="@color/white"
            android:background="@drawable/rounded_text1"
            />

    </RelativeLayout>



</LinearLayout>