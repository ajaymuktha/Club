<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    
    tools:context=".MainActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
       android:orientation="vertical" >

        <ImageView
            android:id="@+id/brand"
            android:layout_width="162.83dp"
            android:layout_height="48dp"
            android:src="@drawable/flogo"
            android:layout_marginLeft="67dp"
            android:layout_marginRight="145.17dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:id="@+id/user"
            android:layout_width="32.02dp"
            android:layout_height="33.97dp"
            android:src="@drawable/avatar"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="22.97dp"
            android:layout_marginRight="27.98dp"/>
        <ImageView
            android:id="@+id/threeline"
            android:layout_width="29dp"
            android:layout_height="20dp"
            android:src="@drawable/line"
            android:background="#FFFFFF"
            android:layout_marginTop="34dp"
            android:layout_marginRight="328dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="31dp"
            />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/text1"
            android:layout_width="293dp"
            android:layout_height="67dp"
            android:text="EARN WHILE"
            android:textStyle="bold"
            android:textColor="#0887FF"
            android:textSize="40sp"
            android:layout_marginLeft="41dp"
            android:layout_marginRight="41dp"
            android:layout_marginBottom="486dp"
            android:layout_marginTop="145dp"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="285dp"
            android:layout_height="67dp"
            android:text="YOU LEARN."
            android:textColor="#0887FF"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="476dp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            />
        <Button
            android:id="@+id/button1"
            android:layout_width="88dp"
            android:layout_height="21dp"
            android:background="@drawable/rounded_button"
            android:text="APPLY NOW"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="144dp"
            android:layout_marginRight="143dp"
            android:textStyle="normal"

            android:layout_marginBottom="354dp"
            />
        <ImageView
            android:id="@+id/lastimage"
            android:src="@drawable/component"
            android:layout_width="294dp"
            android:layout_height="206.28dp"
            android:layout_marginTop="370dp"
            android:layout_marginRight="41dp"
            android:layout_marginLeft="40dp"
            />
        
    </RelativeLayout>



</LinearLayout>