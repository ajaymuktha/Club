<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:orientation="vertical" >

        <ImageView
            android:contentDescription="@string/company"
            android:id="@+id/brand"
            android:layout_width="162.83dp"
            android:layout_height="48dp"
            android:src="@drawable/flogo"
            android:layout_marginStart="67dp"
            android:layout_marginEnd="145.17dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:contentDescription="@string/userlogo"
            android:id="@+id/user"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/avatar"
            android:layout_marginStart="315dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="22.97dp"
            android:layout_marginEnd="27.98dp"/>
        <ImageView
            android:contentDescription="@string/linee"
            android:id="@+id/threeline"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/line"
            android:background="#FFFFFF"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="328dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="31dp"
            />


    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="347dp"
        android:layout_height="190dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:id="@+id/webdept"
                android:textColor="@color/lightblack"
                android:text="@string/web"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="250dp"
               />
            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:id="@+id/departmentweb"
                android:text="@string/development1"
                android:layout_marginStart="26dp"
                 android:layout_marginTop="53dp"
                />
            <ImageView
                android:contentDescription="@string/web_development"
                android:layout_width="133.77dp"
                android:layout_height="72.23dp"
                android:src="@drawable/notfound"
                android:layout_marginStart="194.64dp"
                android:layout_marginTop="60dp"/>






        </RelativeLayout>





    </android.support.v7.widget.CardView>




</LinearLayout>